<div class="modal-dialog">
    <div class="modal-content">
        <form action="{{ path(form_action_attribute) }}" method="post" id="create-employment-contract-form" novalidate="novalidate">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus-circle"></i> {{ 'Add'|trans }} {{ 'Employment Contract'|trans }}</h5>
                <button
                        type="button"
                        class="close"
                        data-dismiss="modal"
                        id="close-create-employment-contract-modal-on-click-top-cross"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <input type="hidden" name="id" value="{{ id }}">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token(id) }}">
                        <div class="form-group {{ flash.has('errors.name')? 'has-error' : '' }}">
                            <label>{{ 'Name'|trans}} ( * )</label>
                            <input type="text"
                                   name="name"
                                   value="{{ name }}"
                                   data-name_from_database=""
                                   data-available_name_url="{{ path(name_available_path) }}"
                                   maxlength="100"
                                   class="form-control"
                                   placeholder=" - {{  'Required'|trans}} -"
                                   required
                            >
                            <small class="errorLabelContainer form-text text-muted text-danger">
                                <span class="has-error">{{ flash.get('errors.name') ? flash.get('errors.name'):'' }} </span>
                            </small>
                        </div>
                        <div class="form-group">
                            <label>
                                {{ '{{ 'Select this value when saving'|trans }}'|trans }}
                                <input type="checkbox"
                                       checked
                                       name="select_this_employment_contract_on_save"
                                >
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button
                        type="button"
                        class="btn btn-focus"
                        data-dismiss="modal"
                        id="close-create-employment-contract-modal-on-click-button-cancel"
                >
                            <span class="btn-label">
                                <i class="fas fa-times-circle"></i>
                            </span>
                    {{ 'Close'|trans }}
                </button>
                <button
                        class="btn btn-success"
                        id="create-employment-designation-submit"
                        type="submit"
                >
                    <span class="btn-label">
                        <i class="fas fa-save"></i>
                    </span>
                    {{ submit_button_label|trans }}
                </button>
            </div>
        </form>
    </div>
</div>
<script>
    $(function () {
        $.getScript("{{ asset('assets/js/blog/_shared/modal.utils.js') }}");
        $.getScript("{{ asset('assets/js/blog/employmentContract/form/create.employment.contract.on.confirm.yes.on.modal.js') }}");
        $.getScript("{{ asset('assets/js/blog/employmentContract/form/check.available.name.js') }}");
    });
</script>
